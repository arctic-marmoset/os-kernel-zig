    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (codelldb)",
            "type": "lldb",
            "request": "custom",
            "preLaunchTask": "build",
            "targetCreateCommands": [
                "target create --no-dependents ${workspaceRoot}/zig-out/hdd/KERNEL.ELF"
            ],
            "processCreateCommands": [
                "gdb-remote localhost:1234",
                "c"
            ]
        },
        {
            "name": "Debug (cppdbg)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/zig-out/hdd/KERNEL.ELF",
            "launchCompleteCommand": "exec-continue",
            "args": [],
            "cwd": "${workspaceRoot}",
            "MIMode": "lldb",
            "miDebuggerServerAddress": "localhost:1234"
        }
    ]
}
