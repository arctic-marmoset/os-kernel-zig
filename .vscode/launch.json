                {
                    "text": "target create --no-dependents ${workspaceRoot}/zig-out/hdd/EFI/BOOT/BOOTX64.efi --symfile ${workspaceRoot}/zig-out/hdd/EFI/BOOT/BOOTX64.pdb"
                },
                {
                    "text": "gdb-remote localhost:1234"
                }
            ]
        }
    ]
