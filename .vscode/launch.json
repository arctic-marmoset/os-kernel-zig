    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/zig-out/hdd/EFI/BOOT/BOOTX64.efi",
            "launchCompleteCommand": "exec-continue",
            "args": [],
